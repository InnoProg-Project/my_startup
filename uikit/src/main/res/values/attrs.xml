<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InnoProgInputView">
        <attr name="state">
            <enum name="inactive" value="0" />
            <enum name="disabled" value="1" />
            <enum name="error" value="2" />
            <enum name="focused" value="3" />
        </attr>

        <attr name="text" format="string" />
        <attr name="label" format="string" />
        <attr name="caption" format="string" />
        <attr name="left_icon" format="reference" />
        <attr name="right_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="LikeCustomView">
        <attr name="likeCount" format="integer" />
        <attr name="liked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AvatarCustomVIew">
        <attr name="avatarBackgroundColor" format="color" />
        <attr name="avatarImageReference" format="reference" />
    </declare-styleable>

    <declare-styleable name="InnoProgButtonView">
        <attr name="buttonSize" format="enum">
            <enum name="large" value="0" />
            <enum name="medium" value="1" />
            <enum name="small" value="2" />
        </attr>
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0" />
            <enum name="def" value="1" />
            <enum name="flat" value="2" />
        </attr>
        <attr name="buttonRightIcon" format="reference" />
        <attr name="buttonLeftIcon" format="reference" />
        <attr name="buttonText" format="string" />
        <attr name="buttonState" format="enum">
            <enum name="enabled" value="0" />
            <enum name="disabled" value="1" />
        </attr>
        <attr name="buttonTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ChipCustomView">
        <attr name="chipBackgroundColor" format="color" />
        <attr name="chipTextColor" format="color" />
        <attr name="chipText" format="string" />
        <attr name="chipChecked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InnoProgTopBarView">
        <attr name="topBar_title" format="string" />
        <attr name="topBar_left_icon" format="reference" />
        <attr name="topBar_right_icon" format="reference" />
    </declare-styleable>
</resources>