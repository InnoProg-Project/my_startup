<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".feature.feed.newsdetails.presentation.NewsDetailsFragment">

    <com.innoprog.android.uikit.InnoProgTopBarView
        android:id="@+id/newsTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:topBar_left_icon="@drawable/ic_back"
        app:topBar_right_icon="@drawable/ic_add_to_farvorites"
        app:topBar_title="@string/publication" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsTopBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="@drawable/tab_layout_background"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabBackground="@drawable/tab_pager_selector"
                app:tabGravity="center"
                app:tabIndicator="@null"
                app:tabMode="fixed"
                app:tabPaddingEnd="@dimen/padding_6"
                app:tabPaddingStart="@dimen/padding_6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/margin_16" />

            <TextView
                android:id="@+id/tvPublicationTitle"
                style="@style/TextHeadline_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"
                tools:text="Помощник в воспитании детей" />

            <TextView
                android:id="@+id/tvPublicationContent"
                style="@style/TextBody_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="6"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicationTitle"
                tools:text="Образовательный уровень родителей зачастую влияет на будущее детей больше, чем их успеваемость в школе. Сотрудники Института образования НИУ ВШЭ выяснили, какую роль играет этот фактор в том выборе, который школьник делает после 9 и 11 классов. Как следует из результатов исследования, далеко не всегда этот выбор продиктован академической успеваемостью. Семья с высоким уровнем образования  помогает школьнику выбрать такие стратегии, которые позволяют получить хорошее образование даже при невысокой успеваемости. И наоборот: дети из семей с невысоким образовательным уровнем чаще готовы согласиться на меньшее или отказаться от тех возможностей, которые открывают им текущие образовательные результаты." />

            <com.innoprog.android.uikit.InnoProgButtonView
                android:id="@+id/btnShowAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:clickable="true"
                android:visibility="visible"
                app:buttonSize="small"
                app:buttonState="enabled"
                app:buttonText="@string/show_all"
                app:buttonType="flat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicationContent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvNewsComments"
                style="@style/TextButtonSmall"
                android:layout_width="69dp"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/rectangle_with_corners"
                android:backgroundTint="@color/background_secondary"
                android:drawablePadding="@dimen/margin_8"
                android:paddingHorizontal="@dimen/padding_12"
                android:paddingVertical="@dimen/padding_6"
                android:textColor="@color/text_secondary"
                app:drawableEndCompat="@drawable/ic_comment_dark"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/btnShowAll"
                tools:text="24" />

            <com.innoprog.android.uikit.InnoProgLikeView
                android:id="@+id/newsLikesView"
                android:layout_width="69dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/margin_8"
                app:layout_constraintStart_toEndOf="@+id/tvNewsComments"
                app:layout_constraintTop_toTopOf="@+id/tvNewsComments" />

            <TextView
                android:id="@+id/tvNewsPublicationDate"
                style="@style/TextCaption_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:textColor="@color/text_tertiary"
                app:layout_constraintBottom_toBottomOf="@+id/tvNewsComments"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                tools:text="24 февраля 2024 в 12:43" />

            <com.innoprog.android.uikit.InnoProgAvatarView
                android:id="@+id/newsAuthorAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:avatarImageReference="@drawable/ic_person"
                app:layout_constraintBottom_toBottomOf="@+id/tvNewsAuthorPosition"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toTopOf="@+id/tvNewsAuthorName" />

            <TextView
                android:id="@+id/tvNewsAuthorName"
                style="@style/TextBody_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_24"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toEndOf="@+id/newsAuthorAvatar"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsComments"
                tools:text="Юлия Анисимова" />

            <TextView
                android:id="@+id/tvNewsAuthorPosition"
                style="@style/TextBody_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/text_secondary"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/tvNewsAuthorName"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsAuthorName"
                tools:text="СЕО в HighTechCorp" />

            <TextView
                android:id="@+id/tvAboutProjectTitle"
                style="@style/TextSubtitle_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/more_about_project"
                android:textColor="@color/text_primary"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsAuthorPosition" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/projectCard"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/bg_project_card"
                android:paddingHorizontal="@dimen/padding_16"
                android:paddingVertical="@dimen/padding_12"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/tvAboutProjectTitle">

                <ImageView
                    android:id="@+id/ivProjectLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvProjectDirection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvProjectName"
                    tools:src="@drawable/ic_launcher_playstore" />

                <TextView
                    android:id="@+id/tvProjectName"
                    style="@style/TextHeadline_3"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_primary"
                    app:layout_constraintEnd_toStartOf="@+id/ivArrowForward"
                    app:layout_constraintStart_toEndOf="@+id/ivProjectLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Мой стартап Мой стартап Мой стартапМой стартап Мой стартап Мой стартап Мой стартап" />

                <TextView
                    android:id="@+id/tvProjectDirection"
                    style="@style/TextBody_2"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintEnd_toEndOf="@+id/tvProjectName"
                    app:layout_constraintStart_toStartOf="@+id/tvProjectName"
                    app:layout_constraintTop_toBottomOf="@+id/tvProjectName"
                    tools:text="Искусственный интеллект Искусственный интеллект Искусственный интеллект Искусственный интеллект" />

                <ImageView
                    android:id="@+id/ivArrowForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward_24x24"
                    app:layout_constraintBottom_toBottomOf="@+id/tvProjectDirection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvProjectName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@color/outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/projectCard" />

            <TextView
                android:id="@+id/tvComments"
                style="@style/TextHeadline_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/comments"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="Комментарии (23)" />

            <com.innoprog.android.uikit.InnoProgInputView
                android:id="@+id/inputComment"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                app:label="@string/add_comment"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/tvComments"
                app:state="inactive" />

            <TextView
                android:id="@+id/tvNoCommentsPlaceholder"
                style="@style/TextBody_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/no_comments_placeholder"
                android:textColor="@color/text_tertiary"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                app:layout_constraintTop_toBottomOf="@+id/inputComment" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputComment"
                tools:itemCount="5"
                tools:listitem="@layout/item_comment"
                tools:visibility="visible" />

            <com.innoprog.android.uikit.InnoProgButtonView
                android:id="@+id/btnShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:clickable="true"
                android:visibility="gone"
                app:buttonSize="small"
                app:buttonState="enabled"
                app:buttonText="@string/show_more"
                app:buttonType="flat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvComments"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>